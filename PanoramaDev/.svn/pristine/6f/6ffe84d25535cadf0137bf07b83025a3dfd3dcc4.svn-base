    class Plage
    {
           private int _debut;
           private int _fin;
           private String _contenu;
           private String _journee;
           
           public Plage(int debut, int fin, String contenu, String journee)
           {
               _debut = debut;
               _fin = fin;
               _contenu = contenu;
               _journee = journee;
           }
           
    }
