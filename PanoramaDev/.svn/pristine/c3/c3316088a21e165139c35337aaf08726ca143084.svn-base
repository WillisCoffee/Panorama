    public void afficherRappGroupe(int numeroGroupe)
    {
        try
        {
            //Informations pour la connexion Ã  la BD
            Class.forName("com.mysql.jdbc.Driver");
            Connection con = DriverManager.getConnection("jdbc:mysql://depInfo5.cegep-rimouski.qc.ca:3306/equipe05", "equipe05", "3qu1p305");

            InputStream inpS = getClass().getResourceAsStream("listeEtudiant.jrxml");
            
            JasperDesign jD = JRXmlLoader.load(inpS);
            
            JasperReport jp = JasperCompileManager.compileReport(jD);
            
            Map<String,Object> map = new HashMap<String, Object>();
            
            map.put("Groupe", Integer.toString(numeroGroupe));
            
            JasperPrint jpP = JasperFillManager.fillReport(jp, map, con);
            
            JRViewer jsV = new JRViewer(jpP);
            this.getContentPane().add (jsV);
            
        }
        catch (Exception ex)
        {
            System.out.println(ex.getMessage());
        }
    }
    
